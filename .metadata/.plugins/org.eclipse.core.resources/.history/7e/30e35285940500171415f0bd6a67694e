package com.lintcode;

public class BinarySearch {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	public int findPosition(int[] nums, int target) {
	        // Write your code here
		int index = 0;
		int len = nums.length;
		int low = 0;
		int hight = nums.length - 1;
		int flag = 0;
		while(low < hight){
			int mid = (low + hight)/2;
			if(nums[mid] == target){
				index = mid;
			}
			if(nums[mid] < target){
				low = mid + 1;
			}
			if(nums[mid] > target){
				hight = mid - 1;
			}
		}
		return index; 
	}

}
